<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SampleDemoActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Sample RxJava2 demo"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/btnObservableTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Types of Observable and Observer"
        android:textAllCaps="false"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/btnLoadArray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load Array Demo"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/btnDoSingleOperation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Edittext value"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btnTextChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit text Change listner"
        android:textAllCaps="false"
        android:layout_marginTop="30dp" />


</LinearLayout>